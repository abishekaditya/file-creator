{
    "name": "file-creator",
    "displayName": "File Creator",
    "description": "Creates files and open files from text editor",
    "version": "0.0.1",
    "publisher": "abishek-aditya",
    "repository": {
        "type" : "git",
        "url": "https://github.com/abishekaditya/file-creator"
    },
    "author": {
        "name": "Abishek Aditya",
        "url": "http://abishekaditya.me",
        "email": "abishekaditya@outlook.com"
    },
    "galleryBanner": {
        "color": "#393566",
        "theme": "dark"
    },
    "engines": {
        "vscode": "^1.22.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:fileCreator.createFile",
        "onCommand:fileCreator.openFile"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "fileCreator.createFile",
                "title": "Create File from selection"
            },
            {
                "command": "fileCreator.openFile",
                "title": "Open File from selection"
            }
        ],
        "keybindings": [
            {
                "command": "fileCreator.createFile",
                "key": "shifft+ctrl+i",
                "mac": "shift+cmd+i",
                "when": "editorTextFocus"
            },
            {
                "command": "fileCreator.openFile",
                "key": "alt+ctrl+i",
                "mac": "alt+cmd+i",
                "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mkdirp": "^0.5.2",
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.6"
    }
}
